\par }{\fs18\lang1024 {\shp{\*\shpinst\shpleft144\shptop10\shpright9361\shpbottom875\shpfhdr0\shpbxcolumn\shpbypara\shpwr3\shpwrk0\shpfblwtxt0\shpz1\shplid2051{\sp{\sn shapeType}{\sv 1}}{\sp{\sn fFlipH}{\sv 0}}{\sp{\sn fFlipV}{\sv 0}}{\sp{\sn fillBackColor}{\sv 16711680}}{\sp{\sn fFilled}{\sv 1}}{\sp{\sn lineWidth}{\sv 3175}}{\sp{\sn fShadow}{\sv 0}}}{\shprslt{\*\do\dobxcolumn\dobypara\dodhgt8193\dprect\dpx144\dpy10\dpxsize9217\dpysize865\dpfillfgcr0\dpfillfgcg0\dpfillfgcb255\dpfillbgcr255\dpfillbgcg255\dpfillbgcb255\dpfillpat1\dplinew5\dplinecor0\dplinecog0\dplinecob0}}}}{\f1\fs18 
